@article{Ibrahim2014199,
title = "Role of dorsal vagal complex \{A2\} noradrenergic neurons in hindbrain glucoprivic inhibition of the luteinizing hormone surge in the steroid-primed ovariectomized female rat: Effects of 5-thioglucose on \{A2\} functional biomarker and \{AMPK\} activity ",
