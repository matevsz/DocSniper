url = "http://www.sciencedirect.com/science/article/pii/S0891584916001192",
author = "Pablo Diaz-Amarilla and Ernesto Miquel and Andrés Trostchansky and Emiliano Trias and Ana M. Ferreira and Bruce A. Freeman and Patricia Cassina and Luis Barbeito and Marcelo R. Vargas and Homero Rubbo",
keywords = "ALS",
